{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/session-start.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/user-prompt-submit.sh",
            "timeout": 2
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/pre-tool-use.sh",
            "timeout": 2
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/pre-tool-use.sh",
            "timeout": 2
          }
        ]
      },
      {
        "matcher": "Bash(npm install*)|Bash(npm i *)",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c '[ -f app.json ] && echo \"Warning: Expo project: Use npx expo install instead of npm install\" >&2 || true'",
            "timeout": 1
          }
        ]
      },
      {
        "matcher": "Bash(rm -rf*)",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "rm -rf detected. Confirm target directory before proceeding."
          }
        ]
      },
      {
        "matcher": "Bash(git push*-f*)|Bash(git push*--force*)",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Force push detected. Confirm you want to rewrite remote history."
          }
        ]
      },
      {
        "matcher": "Bash(git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/pre-commit.sh",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Bash(git push origin main*)",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/pre-deploy-check.sh",
            "timeout": 120
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/post-tool-use-sync.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/post-tool-use-async.sh",
            "timeout": 120,
            "async": true
          }
        ]
      },
      {
        "matcher": "Bash(git push origin main*)",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/post-deploy.sh",
            "timeout": 90
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/quality-gate.sh $TOOL_NAME"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/quality-gate.sh stop",
            "timeout": 45
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/quality-gate.sh task",
            "timeout": 60
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/subagent-context.sh",
            "timeout": 3
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "claude-core@claude-code-plugins": true,
    "claude-frontend@claude-code-plugins": true,
    "claude-backend@claude-code-plugins": true,
    "claude-mobile@claude-code-plugins": true,
    "claude-devops@claude-code-plugins": true,
    "claude-quality@claude-code-plugins": true,
    "claude-devtools@claude-code-plugins": true,
    "typescript-lsp@claude-plugins-official": true,
    "stripe@claude-plugins-official": true,
    "supabase@claude-plugins-official": true,
    "sentry@claude-plugins-official": true,
    "vercel@claude-plugins-official": true,
    "indexandria@indexandria": true
  }
}
